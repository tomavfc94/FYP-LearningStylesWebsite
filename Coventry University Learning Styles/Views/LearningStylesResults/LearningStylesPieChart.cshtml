@model IEnumerable<decimal>

@{
    string myTheme = @" <Chart BackColor=""#eeeeee"">
                            <ChartAreas>
                                <ChartArea Name=""Default"" BackColor=""Transparent""></ChartArea>
                            </ChartAreas>
                        </Chart> ";
}

@{
    Chart LearningStylesPieChart = new Chart(width: 600, height: 400, theme: myTheme)
    .AddTitle("Learning Styles Pie Chart")
    .AddSeries(
        name: "Learning Style",
        chartType: "Pie",
        xValue: new[] { "Aural %", "Kineasthetic %", "Read/Write %", "Visual %" },
        yValues: Model)
    .Write();
}