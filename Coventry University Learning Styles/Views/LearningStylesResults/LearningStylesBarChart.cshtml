@model IEnumerable<decimal>

@{
    string myTheme = @" <Chart BackColor=""#eeeeee"">
                            <ChartAreas>
                                <ChartArea Name=""Default"" BackColor=""Transparent""></ChartArea>
                            </ChartAreas>
                        </Chart> ";
}

@{
    Chart LearningStylesBarChart = new Chart(width: 500, height: 400, theme: myTheme)
        .AddTitle("Learning Styles Bar Chart")
        .AddSeries(
            name: "Learning Style",
            xValue: new[] { "Aural %", "Kineasthetic %", "Read/Write %", "Visual %" },
            yValues: Model)
        .Write();
}